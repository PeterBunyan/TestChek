<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TestChek</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @*Responsive navbar with user-authentication*@
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            @Html.ActionLink("Testchek", "Index", "Home", null, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active nav-link">
                        Your Results. Online. Anytime.
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">My Account</a>
                        <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 37px, 0px);">
                            <ul>
                                <li class="dropdown-item">@Html.ActionLink("My Results", "MyResults", "MyAccount")</li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">F.A.Q.</a>
                        <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 37px, 0px);">
                            <ul>
                                <li class="dropdown-item">@Html.ActionLink("What do my test results mean?", "WhatDoMyTestResultsMean", "FAQ")</li>
                                <li class="dropdown-item">@Html.ActionLink("Who performs these tests?", "WhoPerformsTheseTests", "FAQ")</li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">About Us</a>
                        <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 37px, 0px);">
                            <ul>
                                <li class="dropdown-item btn-link">@Html.ActionLink("Mission", "About", "Home")</li>
                                <li class="dropdown-item btn-link">@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                            </ul>
                            <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact Us New</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Physician Links</a>
                        <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 37px, 0px);">
                            <ul>
                                @*<li class="dropdown-item">@Html.ActionLink("Order Tests", "Index", "AspNetUsers")</li>*@
                                <li class="dropdown-item">@Html.ActionLink("Order Tests", "Index", "PhysicianLinks")</li>
                            </ul>
                        </div>
                    </li>
                </ul>
                <span>
                    @Html.Partial("_LoginPartial")
                </span>
            </div>
        </nav>
    </header>
    @*container-fluid used for welcome pages, but container used for other pages*@
    @*To Do: put container div into partial view and use if else statement to choose which page stile to render*@
    <div class="@ViewBag.Class" id="container-div">
        @RenderBody()
        @*hr and foot properties adjust to enhance welcome pages*@
        <hr class="@ViewBag.Display"/>
        <footer class="@ViewBag.Display">
            <p class="copyright">&copy; @DateTime.Now.Year - TestChek, Inc.</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>
